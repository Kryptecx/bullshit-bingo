<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Bullshit Bingo</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Bingo</h1>
  <p>Wähle eine Show:</p>

<div class="shows">
  <% shows.forEach(show => { %>
    <div class="show-card" onclick="confirmStart('<%= show %>')">
      <%= show %>
    </div>
  <% }) %>
</div>

<script>
  function confirmStart(show) {
    const confirmMsg = `Willst du das Bingo-Spiel für "${show}" starten?`;
    if (confirm(confirmMsg)) {
      window.location.href = `/play/${encodeURIComponent(show)}`;
    }
  }
</script>

</body>
</html>
